<div class="search">
    <div class="glyphicon glyphicon-remove" id="remove"></div>

    <%= search_form_for(@search,url:posts_search_path) do |f|%>
        <p><%= f.collection_select :language_id_eq, @lang, :id, :lang_name, :include_blank => "言語選択" %></p><br>
        <p><%= f.text_field :title_cont, :placeholder => "タイトル" %></p><br>
        <p><%= f.text_area :body_cont %></p><br>
        <p><%= f.text_field :created_at_gteq, :placeholder => "ex.09/01" %>~<%= f.text_field :created_at_lteq, :placeholder => "ex.09/05" %></p><br>
        <%= f.submit "検索" %><br><br>
    <% end %>
</div>

<a href= "#" class="glyphicon glyphicon-search" id="custom_search">カスタム検索</a>


<% if @posts == [] %>
    <p class="no_search">検索結果はありません</p>
<% else %>
    <div class="post_all">
        <% @posts.each do |post| %>
            <div class="post_each">
                <div class="post_top">
                    <div class="post_when"><%= post.updated_at %></div>
                    <div class="post_lang"><%= post.language.lang_name %></div> <br>
                </div>

                <div class="post_bottom">
                    <div class="post_title">
                    <%= link_to post_path(post.id) do%>
                        <%= post.title %>
                    <% end %>
                    </div>
                </div>
            </div>
        <% end %>
    </div>

    <div class="paginate"><%= paginate @posts, class:"paginate" %></div>
</div>

<% end %>

<style>
/* search */
.search{
    margin-top:30px;
    width:100%;
    text-align:center;
}
.no_search{
    margin-top: 30px;
    text-align:center;
    font-size:30px;
}
.post_all{
    margin-top: 50px;
}
.post_each{
    margin: 0 auto;
    width:700px;
    height:70px;
    margin-bottom: 40px;
    border:solid 1px black;

}
.post_lang{
    float:left;
    font-size:20px;
    padding-left:15px;

}
.post_when{
    float:right;
    margin-left:30px;
}

.post_title{
    float:left;
    padding-left:20px;
    font-size:24px;

}
#custom_search{
    font-size: 20px;
    left:64%;
    margin-top:50px;
    display: inline-block;
    border: 2px solid grey;
    padding:15px;
    border-radius: 50%;
}
.post_top{
    background-color: skyblue;
    height:30px;
    border-bottom:solid 1px black;
}
.post_bottom{
    width:100%;

}
.paginate{
    text-align:center;
    font-size: 20px;
}
.search{
    display: none;
    margin-top:50px;
}
#remove{
    color:grey;
    font-size:30px;
    left:30%;
}
</style>

<script>
$(document).on('click', "#custom_search", function(){
    $("#custom_search").fadeToggle();
    $('.post_all').fadeToggle();
    $(".search").slideToggle();
    return false;
})

$(document).on("click","#remove",function(){
    $("#custom_search").slideToggle();
    $('.post_all').slideToggle();
    $(".search").fadeToggle();
    return false;
})
</script>